<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="atmempresaconsultoria.cursoandroid.com.atmempresaconsultoria.EmpresaActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/detalhe_empresa"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/empresa_detalhes"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp" />

    <ScrollView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:id="@+id/scrollView"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean ac risus malesuada, lobortis nisi in, accumsan ante. Sed tempus turpis enim, at auctor odio egestas molestie. Proin pellentesque, magna eu ullamcorper bibendum, felis urna vehicula lectus, sit amet ultricies felis turpis sed elit. Nunc a est lacinia, vulputate diam at, tincidunt orci. Etiam a metus commodo, dictum mi vitae, semper erat. Vivamus a tempor tellus. Morbi vel pretium ipsum. Suspendisse sit amet enim iaculis, lobortis diam non, ornare ante. Nunc diam lacus, dignissim nec auctor tincidunt, gravida sit amet metus. Donec convallis commodo augue eget semper. Sed vel tortor porta tellus placerat ultricies a sed nibh."
            android:id="@+id/textView2"
            android:background="#d5d4d4"
            android:padding="@dimen/padding_padrao" />
    </ScrollView>
</RelativeLayout>
